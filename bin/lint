#!/bin/bash
# Lint and format code using ruff only
#
# Usage:
#   bin/lint          # Check everything
#   bin/lint --fix    # Auto-fix issues

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

echo "Running linters..."
echo ""

# Parse arguments
FIX_FLAG=""
if [ "$1" = "--fix" ]; then
    FIX_FLAG="--fix"
    echo -e "${YELLOW}Auto-fix mode enabled${NC}"
    echo ""
fi

# Step 1: Ruff check (linting)
echo "Ruff check (linting)..."
if [ -n "$FIX_FLAG" ]; then
    uv run ruff check . --fix --unsafe-fixes
else
    uv run ruff check .
fi

# Step 2: Ruff format (code formatting)
echo ""
echo "Ruff format (code formatting)..."
if [ -n "$FIX_FLAG" ]; then
    uv run ruff format .
else
    uv run ruff format --check .
fi

# Step 3: MyPy (type checking)
echo ""
echo "MyPy (type checking)..."
uv run mypy app

echo ""
echo -e "${GREEN}âœ“ All checks passed!${NC}"
